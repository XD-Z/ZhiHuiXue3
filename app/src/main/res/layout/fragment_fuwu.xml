<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20pt"
    android:layout_marginRight="20pt"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".fragment.FuwuFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10pt"
        android:paddingTop="14pt"
        android:text="英语智汇学"
        android:textColor="#EA5404"
        android:textSize="18pt"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#f8f8f8"
        app:cardCornerRadius="10pt"
        app:cardElevation="4pt"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fm"
                android:layout_width="match_parent"
                android:layout_height="166pt"
                android:scaleType="fitXY"
                android:src="@mipmap/img_fuwu_znyy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_greater_than"
                android:paddingBottom="14pt"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:paddingTop="14pt"
                android:text="智能英语介绍"
                android:textColor="#5a5a5a"
                android:textSize="16pt" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10pt"
        app:cardBackgroundColor="#f8f8f8"
        app:cardCornerRadius="10pt"
        app:cardElevation="4pt"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="166pt"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@mipmap/img_fuwu_abc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_greater_than"
                android:paddingBottom="14pt"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:paddingTop="14pt"
                android:text="服务介绍"
                android:textColor="#5a5a5a"
                android:textSize="16pt" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10pt"
        android:text="如需人工服务请拨打电话 : 400-********"
        android:textColor="#5a5a5a"
        android:textSize="14pt" />


</LinearLayout>