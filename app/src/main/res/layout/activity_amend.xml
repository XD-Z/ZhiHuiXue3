<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhile"
    tools:context=".activity.login_register.AmendPasswordActivity">
    <include layout="@layout/include_title" />

    <!--输入原密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:layout_marginLeft="25pt"
        android:layout_marginRight="23pt"
        android:layout_marginTop="10pt"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入原密码"
            android:textSize="12sp"
            android:textColor="@color/colorforgetGrey"/>

        <EditText
            android:id="@+id/amend_et_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10pt"
            android:paddingLeft="5pt"
            android:maxLength="12"
            android:maxLines="1"
            android:password="true"
            android:textColor="@color/colorforgetGrey"
            android:background="@drawable/bg_login_linearlayout"
            android:textSize="12sp" />

    </LinearLayout>

    <!--设置新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:layout_marginLeft="25pt"
        android:layout_marginRight="23pt"
        android:layout_marginTop="10pt"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入原密码"
            android:textSize="12sp"
            android:textColor="@color/colorforgetGrey"/>

        <EditText
            android:id="@+id/amend_et_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10pt"
            android:paddingLeft="5pt"
            android:maxLength="12"
            android:maxLines="1"
            android:password="true"
            android:textColor="@color/colorforgetGrey"
            android:background="@drawable/bg_login_linearlayout"
            android:textSize="12sp" />

    </LinearLayout>

    <!--确认新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:layout_marginLeft="25pt"
        android:layout_marginRight="23pt"
        android:layout_marginTop="10pt"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入原密码"
            android:textSize="12sp"
            android:textColor="@color/colorforgetGrey"/>

        <EditText
            android:id="@+id/amend_et_sure_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10pt"
            android:paddingLeft="5pt"
            android:maxLength="12"
            android:maxLines="1"
            android:password="true"
            android:textColor="@color/colorforgetGrey"
            android:background="@drawable/bg_login_linearlayout"
            android:textSize="12sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="50pt">
        <!--保存-->
        <TextView
            android:layout_width="300pt"
            android:layout_height="45pt"
            android:layout_marginTop="18pt"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_tv_login"
            android:gravity="center"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/btn_amend_save"/>
    </RelativeLayout>

</LinearLayout>
