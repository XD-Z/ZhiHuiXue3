<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58pt"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_center"
        android:layout_width="28pt"
        android:layout_height="26pt"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_anniu" />

    <View
        android:id="@+id/line_left"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_center"
        android:background="#59a5fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/iv_center">

        <View
            android:id="@+id/line_right"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_centerInParent="true"
            android:background="#59a5fa" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line_right"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4pt"
            android:text="2h"
            android:textColor="#ea5404"
            android:textSize="12pt" />
    </RelativeLayout>


    <View
        android:id="@+id/line_up"
        android:layout_width="1pt"
        android:layout_height="16pt"
        android:layout_above="@+id/iv_center"
        android:layout_centerHorizontal="true"
        android:background="#59a5fa" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_center"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <View
            android:id="@+id/line_lower"
            android:layout_width="1pt"
            android:layout_height="16pt"
            android:layout_centerInParent="true"
            android:background="#59a5fa" />

        <TextView
            android:id="@+id/tv_checkpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-1"
            android:textColor="#424242"
            android:textSize="12pt" />
    </RelativeLayout>


</RelativeLayout>