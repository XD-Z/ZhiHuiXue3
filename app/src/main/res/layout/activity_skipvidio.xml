<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEDE5"
    android:orientation="vertical"
    tools:context=".activity.SkipvidioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/white">

        <ImageView
            android:id="@+id/skip_video_back"
            android:layout_width="13dip"
            android:layout_height="22dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/icon_fanhui" />

        <TextView
            android:id="@+id/skip_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="口语训练系统"
            android:textColor="@color/colorAppTheme"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/skip_video_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="跳过"
            android:textColor="@color/colorAppTheme"
            android:textSize="15sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="65dip"
        android:layout_marginTop="12dip"
        android:layout_marginRight="65dip"
        android:layout_marginBottom="21dip"
        android:src="@mipmap/img_english_ab" />

</LinearLayout>