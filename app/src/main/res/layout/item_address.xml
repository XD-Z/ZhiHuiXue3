<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"

    android:paddingTop="14pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20pt">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尹晓峰"
                    android:textColor="#5a5a5a"
                    android:textSize="14pt" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16pt"
                    android:text="17635621248"
                    android:textColor="#5a5a5a"
                    android:textSize="12pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12pt"
                android:text="收货地址:北京市昌平区立水桥502北京市昌平区立水桥502"
                android:textColor="#7a7979"
                android:textSize="12pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8pt"
                android:layout_marginBottom="8pt"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6pt"
                    android:text="设为默认"
                    android:textColor="#999999"
                    android:textSize="10pt" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1pt"
            android:layout_height="50pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40pt"
            android:background="#a0a0a0" />

        <TextView
            android:id="@+id/tv_edit"
            android:gravity="center_vertical"
            android:paddingLeft="28pt"
            android:paddingRight="28pt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="编辑"
            android:textColor="#5a5a5a"
            android:textSize="16pt" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4pt"
        android:background="#f8f8f8" />

</LinearLayout>