<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87pt"
    android:background="@color/colorWhile"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setting_exit_logout"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1"
        android:paddingLeft="84pt"
        android:paddingTop="15pt">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:src="@mipmap/icon_setting_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:text="退出登录"
            android:textColor="@color/colorforgetGrey"
            android:textSize="14pt" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_exit_close"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1"
        android:paddingLeft="84pt"
        android:paddingTop="10pt">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:src="@mipmap/icon_setting_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:text="关闭智汇学"
            android:textColor="@color/colorforgetGrey"
            android:textSize="14pt" />
    </LinearLayout>


</LinearLayout>