<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8pt"
    android:paddingRight="8pt">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_marginTop="12pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10pt"
        android:paddingTop="10pt">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:src="@mipmap/icon_play_hui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3pt"
            android:text="第1关"
            android:textColor="#595757"
            android:textSize="16pt" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="6pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22pt"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shipinzuixiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:text="最小知识点名称1-1-3"
            android:textColor="#898989"
            android:textSize="12pt" />
    </LinearLayout>
    <View
        android:layout_marginTop="6pt"
        android:layout_marginLeft="22pt"
        android:background="#b5b5b6"
        android:layout_width="match_parent"
        android:layout_height="1pt"/>


</LinearLayout>