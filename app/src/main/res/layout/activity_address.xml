<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.mine.AddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/colorAppTheme"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dip"
            android:src="@mipmap/icon_back_while" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="收货地址"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <!--添加新地址-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dip"
            android:text="添加新地址"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

    </RelativeLayout>
    <!--没有地址的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="127dip"
            android:layout_height="103dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="67dip"
            android:src="@mipmap/img_notaddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dip"
            android:text="您还没有添加收货地址"
            android:textColor="@color/colorGrey999"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:background="@drawable/bg_change_phone_tv_code"
            android:paddingLeft="7dip"
            android:paddingTop="5dip"
            android:paddingRight="7dip"
            android:paddingBottom="5dip"
            android:text="添加收货地址"
            android:textColor="@color/colorAppTheme"
            android:textSize="12sp" />
    </LinearLayout>


    <!--有收货地址的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>


</LinearLayout>