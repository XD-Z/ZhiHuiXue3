<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MessagedetailsActivity">

    <include layout="@layout/include_title" />

    <!--通知名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="13dip"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知名称："
            android:textColor="#4C4948"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:text="关于北京发展"
            android:textColor="#424242"
            android:textSize="12sp" />

    </LinearLayout>

    <!--通知时间：-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:layout_marginLeft="70dip"
        android:background="#A0A0A0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="13dip"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知时间："
            android:textColor="#4C4948"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:text="2018-10-27"
            android:textColor="#424242"
            android:textSize="12sp" />

    </LinearLayout>
    <!--15dip的分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:background="@color/colorGreyF8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="15dip"
        android:text="尊敬的用户："
        android:textColor="#ff4c4948"
        android:textSize="14sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="45dip"
        android:layout_marginTop="10dip"
        android:lineSpacingExtra="10dip"
        android:textColor="#4c4948"
        android:textSize="12sp"

        android:text="@string/message_details"/>


</LinearLayout>