<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ZhiFragment">

    <include layout="@layout/include_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:scaleType="fitXY"
        android:src="@mipmap/img_zhi_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_marginTop="28pt"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="276dp"
            android:layout_height="246dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_zhi" />

            <ImageView
                android:id="@+id/img_zhi_direct_writing"
                android:layout_width="100pt"
                android:layout_height="100pt"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/img_zhi_spoken_language"
                android:layout_width="100pt"
                android:layout_height="100pt"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20pt" />

            <ImageView
                android:id="@+id/img_zhi_grammar"
                android:layout_width="100pt"
                android:layout_height="100pt"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20pt" />

        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="55pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_marginBottom="20pt"
        android:scaleType="fitXY"
        android:src="@mipmap/img_zhi_bottom" />
</LinearLayout>