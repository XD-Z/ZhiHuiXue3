<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.AddaddressActivity">

    <include layout="@layout/include_title" />

    <!--收货人-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:gravity="center_vertical"
        android:paddingLeft="21dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:textColor="@color/colorGrey5A"
            android:textSize="15sp" />

        <EditText
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:maxLength="8"
            android:maxLines="1"
            android:textColor="@color/colorGrey999"
            android:textSize="12sp" />
    </LinearLayout>

    <!--手机号-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/colorGreyF8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:gravity="center_vertical"
        android:paddingLeft="21dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/colorGrey5A"
            android:textSize="15sp" />

        <EditText
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:maxLength="11"
            android:maxLines="1"
            android:phoneNumber="true"
            android:textColor="@color/colorGrey999"
            android:textSize="12sp" />
    </LinearLayout>


    <!--所在地区-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/colorGreyF8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:paddingLeft="21dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所在地区"
            android:textColor="@color/colorGrey5A"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dip"
            android:src="@mipmap/icon_enter_black" />
    </RelativeLayout>


    <!--详细地址：-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/colorGreyF8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dip"
        android:paddingLeft="21dip"
        android:paddingTop="14dip">

        <TextView
            android:id="@+id/addaddress_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址："
            android:textColor="@color/colorGrey5A"
            android:textSize="15sp" />

        <EditText
            android:layout_width="250dip"
            android:layout_height="50dip"
            android:layout_below="@id/addaddress_tv_address"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@id/addaddress_tv_address"
            android:background="@null"
            android:gravity="top"
            android:maxLines="3"
            android:text="详细地址 : 如道路,门牌号,小区,单元"
            android:textColor="@color/colorGrey999"
            android:textSize="12sp" />
    </RelativeLayout>


    <!--设为默认地址-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/colorGreyF8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:paddingLeft="21dip"
        android:paddingTop="14dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="@color/colorGrey5A"
            android:textSize="15sp" />

        <com.suke.widget.SwitchButton
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_marginRight="17dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.8"
            app:sb_checked="true"
            app:sb_checked_color="@color/colorAppTheme"
            app:sb_show_indicator="false" />

    </RelativeLayout>


</LinearLayout>