<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="106dp"
            android:layout_height="94dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="106dp"
                android:layout_height="94dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_fuwu_znyy" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小学生单词100个"
                android:textColor="#5a5a5a"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="¥ 19999.00"
                android:textColor="#c53434"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#f6f6f6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:text="支付方式"
        android:textColor="#ea5404"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="16dp"
        android:background="#f6f6f6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_payment_wx"
        android:drawablePadding="16dp"
        android:gravity="center|left"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="微信支付"
        android:textColor="#5a5a5a"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="16dp"
        android:background="#f6f6f6" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_payment_zfb"
        android:drawablePadding="16dp"
        android:gravity="center|left"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="支付宝支付"
        android:textColor="#5a5a5a"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="16dp"
        android:background="#f6f6f6" />
    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="确认支付"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_detalis"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:layout_width="match_parent"
        android:layout_height="46dp" />




</LinearLayout>