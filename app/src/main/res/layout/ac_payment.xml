<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20pt"
        android:paddingTop="10pt">

        <android.support.v7.widget.CardView
            android:layout_width="106pt"
            android:layout_height="94pt"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10pt"
            app:cardElevation="3pt"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="106pt"
                android:layout_height="94pt"
                android:scaleType="fitXY"
                android:src="@mipmap/img_fuwu_znyy" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26pt"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小学生单词100个"
                android:textColor="#5a5a5a"
                android:textSize="16pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:text="¥ 19999.00"
                android:textColor="#c53434"
                android:textSize="18pt" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginTop="10pt"
        android:background="#f6f6f6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22pt"
        android:layout_marginTop="16pt"
        android:text="支付方式"
        android:textColor="#ea5404"
        android:textSize="16pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="52pt"
        android:layout_marginTop="16pt"
        android:background="#f6f6f6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_payment_wx"
        android:drawablePadding="16pt"
        android:gravity="center|left"
        android:paddingBottom="10pt"
        android:paddingLeft="30pt"
        android:paddingTop="10pt"
        android:text="微信支付"
        android:textColor="#5a5a5a"
        android:textSize="14pt" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="102pt"
        android:layout_marginTop="16pt"
        android:background="#f6f6f6" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_payment_zfb"
        android:drawablePadding="16pt"
        android:gravity="center|left"
        android:paddingBottom="10pt"
        android:paddingLeft="30pt"
        android:paddingTop="10pt"
        android:text="支付宝支付"
        android:textColor="#5a5a5a"
        android:textSize="14pt" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="102pt"
        android:layout_marginTop="16pt"
        android:background="#f6f6f6" />
    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="确认支付"
        android:textColor="#fff"
        android:textSize="18pt"
        android:background="@drawable/btn_bg_detalis"
        android:layout_marginBottom="24pt"
        android:layout_marginRight="36pt"
        android:layout_marginLeft="36pt"
        android:layout_width="match_parent"
        android:layout_height="46pt" />




</LinearLayout>