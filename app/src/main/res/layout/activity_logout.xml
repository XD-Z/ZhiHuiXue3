<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhile"
    android:orientation="vertical"
    tools:context=".activity.login_register.LogoutActivity">

    <include layout="@layout/include_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/colorLoginGrey" />

    <ImageView
        android:layout_width="36pt"
        android:layout_height="36pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25pt"
        android:layout_marginBottom="26pt"
        android:src="@mipmap/icon_warning_exclamation" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="将139****125所绑定的账号注销"
        android:textColor="@color/colorGrey5A"
        android:textSize="18pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11pt"
        android:gravity="center"
        android:text="注意，注销账号后以下信息将被清空且无法找回"
        android:textColor="@color/colorGrey5A"
        android:textSize="10pt" />


    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11pt"
        android:layout_marginTop="30pt"
        android:layout_marginRight="11pt"
        app:cardBackgroundColor="#f8f8f8"
        app:cardCornerRadius="2pt"
        app:cardElevation="1pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207pt"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0pt"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:layout_marginTop="30pt"
                    android:text="身份、账户信息、会员、及权益信息"
                    android:textColor="@color/colorGrey5A"
                    android:textSize="12pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:layout_marginTop="21pt"
                    android:text="交易记录"
                    android:textColor="@color/colorGrey5A"
                    android:textSize="12pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:layout_marginTop="23pt"
                    android:text="银行卡的快捷支付（含卡通）服务"
                    android:textColor="@color/colorGrey5A"
                    android:textSize="12pt" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0pt"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="299pt"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19pt"
                    android:text="@string/setting_logout"
                    android:textColor="@color/colorGrey666"
                    android:textSize="12pt" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--下一步-->
    <TextView
        android:layout_width="300pt"
        android:layout_height="43pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40pt"
        android:background="@drawable/bg_tv_login"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="20pt" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击【下一步】即代表你已经同意"
            android:textColor="@color/colorGrey9C9A"
            android:textSize="12pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户注销协议》"
            android:textColor="@color/colorGrey5A"
            android:textSize="12pt" />
    </LinearLayout>

</LinearLayout>