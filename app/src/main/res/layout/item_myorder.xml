<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8pt"
        android:paddingLeft="16pt"
        android:paddingRight="8pt"
        android:paddingTop="8pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="秒记单词商品区"
            android:textColor="#ea5404"
            android:textSize="16pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="物流单号:123523411354"
            android:textColor="#5a5a5a"
            android:textSize="12pt" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="#f8f8f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:orientation="horizontal"
        android:paddingLeft="20pt"
        android:paddingRight="20pt">

        <android.support.v7.widget.CardView
            android:layout_width="108pt"
            android:layout_height="94pt"
            app:cardCornerRadius="10pt">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_fuwu_znyy" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18pt"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小学生单词100个"
                android:textColor="#5a5a5a"
                android:textSize="16pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="有效期：365天"
                android:textColor="#666666"
                android:textSize="12pt" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:layout_weight="1"
                android:text="¥ 99.00"
                android:textColor="#c53434"
                android:textSize="16pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_actual_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="实付: ¥99.00"
                    android:textColor="#666464"
                    android:textSize="12pt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="68pt"
                        android:layout_height="20pt"
                        android:layout_marginTop="6pt"
                        android:background="@drawable/btn_order_gray"
                        android:text="取消订单"
                        android:textColor="#939191"
                        android:textSize="12pt" />

                    <Button
                        android:layout_width="68pt"
                        android:layout_height="20pt"
                        android:layout_marginLeft="6pt"
                        android:layout_marginTop="6pt"
                        android:background="@drawable/btn_order_rad"
                        android:text="确认收货"
                        android:textColor="#ea5404"
                        android:textSize="12pt" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4pt"
        android:layout_marginTop="10pt"
        android:background="#f8f8f8" />


</LinearLayout>