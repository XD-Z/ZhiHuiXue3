<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhile"
    android:orientation="vertical"
    tools:context="com.rhkj.zhihuixue.activity.login_register.LoginActivity">

    <ImageView
        android:layout_width="135pt"
        android:layout_height="135pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70pt"
        android:src="@mipmap/icon_loginlogo" />

    <!--手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47pt"
        android:layout_marginLeft="38pt"
        android:layout_marginTop="60pt"
        android:layout_marginRight="38pt"
        android:background="@drawable/bg_login_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="19pt"
            android:layout_height="25pt"
            android:layout_marginLeft="10pt"
            android:src="@mipmap/icon_phone" />

        <EditText
            android:layout_width="130pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:textSize="16pt"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:maxLines="1"
            android:phoneNumber="true"
            android:textColor="@color/colorLoginGrey"
            android:id="@+id/login_et_phone"/>
    </LinearLayout>

    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47pt"
        android:layout_marginLeft="38pt"
        android:layout_marginTop="10pt"
        android:layout_marginRight="38pt"
        android:background="@drawable/bg_login_linearlayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="19pt"
            android:layout_height="23pt"
            android:layout_marginLeft="10pt"
            android:src="@mipmap/icon_lock" />

        <EditText
            android:layout_width="130pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:textSize="16pt"
            android:background="@null"
            android:hint="请输入密码"
            android:singleLine="true"
            android:maxLength="12"
            android:password="true"
            android:textColor="@color/colorLoginGrey"
            android:id="@+id/login_et_password"/>
    </LinearLayout>

    <!--忘记密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12pt"
            android:layout_marginRight="38pt"
            android:text="忘记密码?"
            android:textColor="#595757" />
    </RelativeLayout>

    <!--登录-->
    <TextView
        android:layout_width="300pt"
        android:layout_height="43pt"
        android:layout_marginTop="34pt"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_tv_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="20pt"
        android:id="@+id/btn_login"/>

    <!--注册-->
    <TextView
        android:layout_width="300pt"
        android:layout_height="43pt"
        android:layout_marginTop="11pt"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_tv_register"
        android:gravity="center"
        android:text="注册"
        android:textColor="#EA5404"
        android:textSize="20pt"
        android:id="@+id/btn_register"/>

    <!--字体-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专注未来智慧 好方法智相伴"
            android:textColor="#9A9A9A"
            android:textSize="12pt"
            android:layout_marginBottom="15pt"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>