<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    //这里是Linearlayout布局的背景颜色
    <solid android:color="#F1F1F1" />
    <!--//这里是设置边框线的粗细和颜色-->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3"/>

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    //角
    <corners android:radius="10dp" />
</shape>